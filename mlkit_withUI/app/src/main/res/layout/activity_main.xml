<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/car"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:src="@drawable/car2" />

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_below="@id/car"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@id/car"
        />

    <Button
        android:id="@+id/setbeforeDrive"
        android:text="@string/settingbeforedriving"
        android:fontFamily="@font/kyobo_handwriting_2019"
        android:layout_below="@id/logo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/car"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffff"
        android:textSize="25sp"
        android:background="#00462A"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/start"
        android:text="@string/start"
        android:fontFamily="@font/kyobo_handwriting_2019"
        android:layout_below="@id/logo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/car"
        android:layout_marginRight="35dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffff"
        android:textSize="23sp"
        android:background="#00462A"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/BTbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/start"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:textSize="23sp"
        android:background="#00462A"
        android:text="블루투스" />
</RelativeLayout>